<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:brann="clr-namespace:Accolades.Brann"
             x:Class="Accolades.Brann.App"
             RequestedThemeVariant="Default">

             <Application.Resources>
                 <ResourceDictionary>
                     <ResourceDictionary.MergedDictionaries>
                         <ResourceInclude Source="/Themes/BaseResources.axaml"></ResourceInclude>
                     </ResourceDictionary.MergedDictionaries>
                 </ResourceDictionary>
             </Application.Resources>
    
             <Application.Styles>
                 <StyleInclude Source="/Themes/BaseStyles.axaml"></StyleInclude>
             </Application.Styles>
    
             <Application.DataTemplates>
                 <brann:ViewLocator/>
             </Application.DataTemplates>
  
             <Application.Styles>
                 <FluentTheme />
             </Application.Styles>
</Application>